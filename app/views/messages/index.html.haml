.body
  = render 'groups/sidebar'
  .main
    .main__header
      .main__header__box-left
        .main__header__box-left__name
          = @group.name
        %ul.main__header__box-left__menber
          Menber :
          %li.main__header__box-left__menber__list
            - @group.group_users.each do |group_user|
              = group_user.user.name
      = link_to edit_group_path(@group), class:"main__header__btn" do
        Edit
    = render @messages
    = render partial: 'messages/form'